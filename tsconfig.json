{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dev",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "lib": [
      "es2018",
      "es2020",
      "esnext.asynciterable",
      "DOM"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "knexfile.ts",
    "typings/**/*"
  ]
}
